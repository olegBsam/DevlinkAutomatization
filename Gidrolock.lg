ПРОЦЕДУРА Gidrolock_Maintenance
	НАЧАЛО
		ПЕРЕМЕННЫЕ
			НАЧАЛО
				ЦЕЛ16 day
				ЦЕЛ16 hour
				ЦЕЛ16 minute
				ЦЕЛ16 second
			КОНЕЦ
		(,,day) = СДата()
		(hour, minute, second) = СВремя()
		ЕСЛИ ((day = 1 | day = 16) & (hour = 0 & minute = 0 & (second = 0 | second = 1))){
			ДЛЯ iGidrolockCraneId[1]
			{
				ЕСЛИ (Gidrolock_GetStateById(iGidrolockCraneId) = STATE_GIDROLOCK_CRANE_CLOSE){
					рв28 = 566
					Gidrolock_CmdOpen(iGidrolockCraneId)		
				}
				ИНАЧЕ {
					рв28 = 567
					Gidrolock_CmdClose(iGidrolockCraneId)
				}
			}
		}
	КОНЕЦ
		

(*********************************************************************)

ФУНКЦИЯ Gidrolock_CmdClose
	ВХОДНЫЕ_ПЕРЕМЕННЫЕ
		НАЧАЛО
			ЦЕЛ16 gidrolockCraneId
		КОНЕЦ
	НАЧАЛО
		ДЛЯ iGidrolockCraneId[1],
			iOpcGidrolockCraneCmd[8],
			iOpcGidrolockCraneState[9],
			iMdbCraneId[12],
			iCraneCmdChange[10]
		{
			ЕСЛИ (iGidrolockCraneId = gidrolockCraneId)	{
				ЕСЛИ (рв[iOpcGidrolockCraneCmd] = CMD_GIDROLOCK_CRANE_OPEN){
					пл[iMdbCraneId]	= CMD_GIDROLOCK_CRANE_CLOSE
					рв[iOpcGidrolockCraneCmd] = CMD_GIDROLOCK_CRANE_CLOSE
				}
				ПРЕРВАТЬ
			}
		}
	КОНЕЦ

(*********************************************************************)
ФУНКЦИЯ Gidrolock_CmdOpen
	ВХОДНЫЕ_ПЕРЕМЕННЫЕ
		НАЧАЛО
			ЦЕЛ16 gidrolockCraneId
		КОНЕЦ
	НАЧАЛО
		ДЛЯ iGidrolockCraneId[1],
			iMdbCraneId[12],
			iOpcGidrolockCraneCmd[8],
			iOpcGidrolockCraneState[9],
			iCraneCmdChange[10]
		{
			ЕСЛИ (iGidrolockCraneId = gidrolockCraneId){
				ЕСЛИ (рв[iOpcGidrolockCraneState] = STATE_GIDROLOCK_CRANE_CLOSE){ 
					пл[iMdbCraneId]	= CMD_GIDROLOCK_CRANE_OPEN
					рв[iOpcGidrolockCraneCmd] = CMD_GIDROLOCK_CRANE_OPEN
				}
				ПРЕРВАТЬ
			}
		}
	КОНЕЦ

